<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".real.MainActivity">


        <TextView
            android:id="@+id/solution_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/result_tv"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/buttons_layout"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"

            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="35dp" />



        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#F1F1F1"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonStartGame"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="G"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_Rad"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="Rad"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_route"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="r"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_back"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/black"
                    android:text="←"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_open_bracket"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#2196F3"
                    android:text="("
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_close_bracket"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#2196F3"
                    android:text=")"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_divide"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#3D2070"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_sin"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="sin"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_cos"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="cos"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_tan"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="tan"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_7"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_8"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_9"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_multiply"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#3D2070"
                    android:text="*"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_ln"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="ln"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_log"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="log"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_divide_x"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="1/x"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_4"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_5"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_6"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_plus"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#3D2070"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_e_qurtor"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="e^x"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_x_qurtor"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="x^2"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_x_qurtor_y"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="x^y"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_1"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_2"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_3"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_minus"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#3D2070"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_no"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="n"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pi"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="pi"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_e"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="S 5.1"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_c"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/black"
                    android:text="c"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_0"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_dot"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_equals"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#3D2070"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="36dp" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
